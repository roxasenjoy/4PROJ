{% extends 'base.html.twig' %}

{% block title %}Madjid Booster - Gestion des cours{% endblock %}


{% block body %}

    <div class="student-container sectionContainer transition">

        {% block filAriana %}
            <nav aria-label="breadcrumb">
                <ol class="breadcrumbs ">
                    <li class="element ">
                        <a href="{{ path('app_dashboard') }}" class="transition">
                            <span class="animationClickableText">Tableau de bord</span>
                        </a>
                    </li>

                    <li class="current">Gestion des cours</li>
                </ol>
            </nav>
        {% endblock %}


        <main class="container-two-rows">
            <section class="left-section shadow">
                <h3 class="titleSection"><i class="fa-solid fa-chalkboard-user"></i> Gestion des cours </h3>
                <hr>

                {% block listCours %}
                    <div class="content">

                        <!-- Elément à boucler -->
                        <div class="card-container">
                            {% for cours in allCours %}
                                <a class="card shadow zoom" href="{{ path('pedago_cours_details', {id: cours.id}) }}">
                                    <div class="logo-nav ">

                                        {% if cours.levelYear == 1 %}
                                            <p class="actualYear one"> {{ cours.levelName }}</p>
                                        {% elseif cours.levelYear == 2 %}
                                            <p class="actualYear two"> {{ cours.levelName }}</p>
                                        {% elseif cours.levelYear == 3 %}
                                            <p class="actualYear three"> {{ cours.levelName }}</p>
                                        {% elseif cours.levelYear == 4 %}
                                            <p class="actualYear four"> {{ cours.levelName }}</p>
                                        {% elseif cours.levelYear == 5 %}
                                            <p class="actualYear five"> {{ cours.levelName }}</p>
                                        {% endif %}

                                        <i class="fa-solid fa-book-open"></i>
                                        <p id="fullName">{{ cours.name }}</p>
                                    </div>
                                </a>
                            {% endfor %}
                        </div>
                    </div>

                {% endblock %}

            </section>

            <div class="right-section ">
                <div class="fixed">
                    <section class="shadow">
                        <h3 class="titleSection"><i class="fa-solid fa-chalkboard-user"></i> Promotions </h3>
                        <hr>

                        {% block promotion %}
                            <div class="containerClass">
                                    <a href="{{ path('app_cours_promotion', {promotion: 1}) }}"
                                       class="{{ promotion == 1 ? 'transition shadow selected zoom' :'transition shadow' }}"> A.Sc.1 </a>

                                    <a href="{{ path('app_cours_promotion', {promotion: 2}) }}"
                                       class="{{ promotion == 2 ? 'transition shadow selected zoom' :'transition shadow' }}"> A.Sc.2 </a>

                                    <a href="{{ path('app_cours_promotion', {promotion: 3}) }}"
                                       class="{{ promotion == 3 ? 'transition shadow selected zoom' :'transition shadow' }}"> B.Sc </a>

                                    <a href="{{ path('app_cours_promotion', {promotion: 4}) }}"
                                       class="{{ promotion == 4 ? 'transition shadow selected zoom' :'transition shadow' }}"> M.Sc.1 </a>

                                    <a href="{{ path('app_cours_promotion', {promotion: 5}) }}"
                                       class="{{ promotion == 5 ? 'transition shadow selected zoom' :'transition shadow' }}"> M.Sc.2 </a>

                                    <a href="{{ path('app_cours_campus')}}"
                                       class="{{ promotion > 5 or promotion < 1 ? 'transition shadow selected zoom' :'transition shadow' }}"> Toutes les promotions </a>
                            </div>
                        {% endblock %}
                    </section>



                    <section class="shadow actionStudent">
                        <h3 class="titleSection"><i class="fa-solid fa-hammer"></i> Actions </h3>
                        <hr>

                        <a href="{{ path('app_cours_add') }}" class="linkNewStudent zoom"><i class="fa-solid fa-plus"></i> Ajouter un cours </a>

                    </section>

                </div>
            </div>

        </main>

    </div>
{% endblock %}
