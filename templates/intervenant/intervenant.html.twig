{% extends 'base.html.twig' %}

{% block title %}Campus Booster - Intervenants{% endblock %}

{% block body %}

    <div class="intervenant-container sectionContainer transition">

        {% block filAriana %}
            <nav aria-label="breadcrumb">
                <ol class="breadcrumbs ">
                    <li class="element ">
                        <a href="{{ path('app_dashboard') }}" class="transition">
                            <span class="animationClickableText">Tableau de bord</span>
                        </a>
                    </li>

                    <li class="current">Intervenants</li>
                </ol>
            </nav>
        {% endblock %}

            <section class="shadow">
                <h3 class="titleSection">
                    <i class="fa-solid fa-chalkboard-user"></i>
                        Intervenants
                </h3>
                <hr>


                {% if intervenants %}
                    {% for intervenant in intervenants %}

                        <div class="intervenantsTable">

                            <div class="section left">
                                <p class="lessonName"> {{intervenant.name}} </p>
                            </div>


                            <div class="section center">
                                <p> {{intervenant.firstName}} {{ intervenant.lastName}} </p>
                            </div>



                        </div>
                    {% endfor %}

                {% else %}
                    <p class="no-information"> Aucun intervenant n'est disponible pour le moment</p>
                {% endif %}

            </section>
    </div>

{% endblock %}
