{% extends './auth/login.html.twig'%}

{% block title %}Madjid Booster - Réinitaliser votre mot de passe{% endblock %}

{% block content_body %}

    <!-- ENTRER LES DEUX MOTS DE PASSE POUR RESET SON PASSWORD -->

    <h3>Réinitialiser votre mot de passe </h3>

    {{ form_start(resetForm) }}

    {% if formNotValid  %}
        <p class="text-error">{{ formNotValid }}</p>
    {% endif %}



    <div class="input-login">
        {{ form_widget(resetForm.plainPassword.first) }}
    </div>

    <div class="input-login">
        {{ form_widget(resetForm.plainPassword.second) }}
    </div>

    <div class="action-login">
        <button class="transition" type="submit">Reinitialiser votre mot de passe</button>
    </div>
    {{ form_end(resetForm) }}
{% endblock %}
