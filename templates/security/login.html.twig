{% extends 'base.html.twig' %}

{% block title %}Campus Booster - Connexion{% endblock %}

{% block body %}

    <main class="background-login">
        <div class="container-login">
            <div class="content-login">

                <!-- Section pour le login -->
                <section class="left-login">
                    <img src="{{ asset('build/images/logo-blue-supinfo.png') }}" alt="Logo supinfo bleu">
                    <h3>Heureux de vous revoir ! </h3>

                    <p id="title-login">Veuillez vous identifier</p>

                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                            <!-- Email de l'utlisateur -->
                            <div class="input-login">
                                <input  type="email" placeholder="Adresse email Booster" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required autofocus>
                            </div>
                        
                            <!-- Mot de passe -->
                            <div class="input-login">
                                <input  type="password" placeholder="Mot de passe" name="password" id="inputPassword" autocomplete="current-password" required>
                            </div>
                            

                            <!-- Token de l'utlisateur quand il va se connecter -->
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <!-- Se souvenir de moi -->
                            <div class="rememberMe">
                               
                                <input type="checkbox" name="_remember_me"> 
                                 <label for="_remember_me">Se souvenir de moi</label>
                            </div>

                            <p id="security-message-login">Pour des raisons de sécurité, nous vous déconseillons d'activer cette option sur un ordinateur public.</p>
                    

                        <div class="action-login">
                            <button class="transition" type="submit">Se connecter</button>
                            <a href="" >Mot de passe oublié ? </a>
                        </div>
                        
                    </form>


                </section>

                <!-- Section pour afficher ce qu'on souhaite -->
                <section class="right-login">
                    <img src="assets\images\login\logo-white-supinfo.png" alt="Logo supinfo blanc">
                </section>


                
            </div>
        </div>
    </main>
            
{% endblock %}
